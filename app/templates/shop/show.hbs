<div class='{{v.mdFlex}} {{styles.productContainerHeight}}'>
  <div class='{{v.col12}} {{v.mdCol6}} {{v.mdFlex}} {{v.flexColumn}} {{v.alignEnd}}'>
    <div>
      <div>
        <img class='{{v.smFullWidth}} {{styles.productContainerHeight}}' src={{model.gallery.firstObject.file.url}}/>
      </div>
      <div class='{{v.flex}} {{v.spaceBetween}} {{v.py2}}'>
        <img src='images/icon-arrow_head.svg' />
        <img src='images/icon-plus.svg' />
      </div>
    </div>
  </div>
  <div class='{{v.col12}} {{v.mdCol6}} {{v.pr6}} {{v.ml4}} {{v.flex}} {{v.flexColumn}}'>
    <div class='{{v.col12}} {{v.lgCol8}} {{v.flexHalf}}'>
      <h1 class='{{v.serifLight}}'>{{model.title}}</h1>
      <h1 class='{{v.serifLight}}'>${{model.price}}</h1>
      <h1 class='{{v.serifLight}}'>Select a size:</h1>
      <ul class='{{v.listNone}} {{v.p0}} {{v.flex}} {{v.spaceBetween}}'>
        {{#each model.options as |option|}}
          <li>
            <h1 class='{{v.serifLight}} {{v.caps}}'>{{option}}</h1>
          </li>
        {{/each}}
      </ul>
      <h4 class={{v.sansRegular}}>{{model.description}}</h4>
      <ul class='{{v.listNone}} {{v.p0}} {{v.sansRegular}}'>
        {{#each model.instructionList as |instruction|}}
          <li>{{instruction}}</li>
        {{/each}}
      </ul>
    </div>
    <div class='{{v.flex}} {{v.flexHalf}} {{v.flexColumn}} {{v.justifyEnd}}'>
      <h1 class='{{v.serifLight}}'>Add to Bag</h1>
    </div>
  </div>
</div>
