{{#fade-in slug=slug}}
  <div class={{vudu 'mxAuto pl2'}}>
    {{back-button}}
  </div>
  {{#with (medium-item-for-slug sanctu.feedData slug) as |article|}}
  <div class="{{vudu ' mxAuto'}} {{styles.articleWrapper}}">
    <p class={{vudu 'pLarge mb3'}}>{{moment-format article.pubDate 'MM.DD.YYYY'}}</p>
    <p class={{vudu 'pLarge mb2 inlineBlock borderBottomMedium pb1'}}>{{article.title}}</p>
    <div class="content">
      {{{article.content:encoded}}}
    </div>
  </div>
  {{/with}}

  {{#with (filtered-feed-data sanctu.feedData slug) as |filteredFeedData|}}
    <div class={{vudu 'py5 borderTopThin col10 lgCol12 mxAuto'}}>
      {{#each filteredFeedData as |post|}}
        {{#link-to 'feed.show' (medium-slug post.link) class=(vudu 'inlineBlock col12 borderBottomThin')}}
          {{feed-list-item post=post}}
        {{/link-to}}
      {{/each}}
    </div>
  {{/with}}
{{/fade-in}}
