<div class="{{styles.filterBlock}} {{vudu 'sansRegular small'}}">
  {{#if isFiltered}}
    <img {{action 'clearFilters'}} class="{{vudu 'maxHeight15'}}" src='images/x.svg' />
  {{else}}
    <img src='images/filter.svg' class="{{vudu 'maxHeight15'}}" />
  {{/if}}
</div>
<div class="{{styles.projectType}}">
  <ul class={{vudu 'flex spaceAround'}}>
    {{#each types as |type|}}
      {{filter-button
          typeFilter=typeFilter
          filter=type
          filterAction=(route-action 'toggleFilter' type)}}
    {{/each}}
  </ul>
</div>
<div class="{{styles.techStack}}">
  <ul class={{vudu 'flex spaceAround'}}>
    {{#each technologies as |tech|}}
      {{filter-button
          techFilter=techFilter
          filter=tech
          filterAction=(route-action 'toggleFilter' tech)}}
    {{/each}}
  </ul>
</div>
